<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePassword">

    <TextView
        android:id="@+id/textPasswordChangeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:layout_marginTop="@dimen/_60sdp"
        android:textStyle="bold"
        android:fontFamily="@font/orbitron"
        android:textColor="@color/black"
        android:textSize="@dimen/_20ssp"
        android:letterSpacing=".1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_40sdp"
        android:ems="10"
        android:layout_marginTop="@dimen/_30sdp"
        android:inputType="textPassword"
        android:hint="Old Password"
        android:textColor="@color/black"
        android:fontFamily="@font/zenantique"
        android:textColorHint="@color/black"
        android:paddingStart="@dimen/_10sdp"
        android:autofillHints="password"
        android:background="@drawable/edittext"
        app:layout_constraintEnd_toEndOf="@+id/textPasswordChangeTitle"
        app:layout_constraintStart_toStartOf="@+id/textPasswordChangeTitle"
        app:layout_constraintTop_toBottomOf="@+id/textPasswordChangeTitle" />

    <EditText
        android:id="@+id/editTextNewPassword"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_40sdp"
        android:ems="10"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="New Password"
        android:background="@drawable/edittext"
        android:textColorHint="@color/black"
        android:paddingStart="@dimen/_10sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/zenantique"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/editTextPassword"
        app:layout_constraintStart_toStartOf="@+id/editTextPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />

    <EditText
        android:id="@+id/editTextTextPassword3"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_40sdp"
        android:ems="10"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="Confirm Password"
        android:background="@drawable/edittext"
        android:textColorHint="@color/black"
        android:paddingStart="@dimen/_10sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/zenantique"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/editTextNewPassword"
        app:layout_constraintStart_toStartOf="@+id/editTextNewPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextNewPassword" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonChangePassword"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_100sdp"
        android:text="Change Password"
        android:textStyle="bold"
        android:fontFamily="@font/zenantique"
        android:textColor="@color/white"
        android:background="@drawable/proceed"
        android:letterSpacing=".1"
        android:textSize="@dimen/_14sdp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword3" />

</androidx.constraintlayout.widget.ConstraintLayout>